@model IEnumerable<_92031083_ModelRailStore.Models.Category>

@{ ViewBag.Title = "Index"; } 

@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="admin-options">
        <h5 class="sidebar-left admin-create">@Html.ActionLink("Create New", "Create")</h5>
    </div>
    <div class="row"></div>
}

<div class="full-page">
    <table class="category-name">
        <tr>
            <th class="lg-boldtext">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr> @foreach (var item in Model)
        {
            <tr>
                <td>
                    <h2 class="lg-text with-highlight">@Html.ActionLink(item.Name, "Index", "Products", new { 
                        category = item.Name }, null)</h2>
                </td>
                <td> @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                    <div class="admin-options">
                        <h5 class="sidebar-left admin-edit">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) 
                        </h5>
                        <h5 class="sidebar-left admin-delete">
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </h5>
                    </div>
                    }
                </td>
            </tr>
        }
    </table>
    <table class="category-image" border="0" width=100%>
        <tr>
            <td><img src="/Content/CategoryImages/engine.png" alt="loco" /></td>
            <td></td>
            <td><img src="/Content/CategoryImages/book.png" alt="book" /></td>
            <td></td>
            <td><img src="/Content/CategoryImages/building2.png" alt="building" max-height: 100%; /></td>
        </tr>
        <tr>
            <td></td>
            <td><img src="~/Content/CategoryImages/electrical.png" alt="electrical" /></td>
            <td></td>
            <td><img src="~/Content/CategoryImages/carriage.png" alt="carriage" /></td>
        </tr>
        <tr>
            <td><img src="/Content/CategoryImages/unitrack.png" alt="track" /></td>
            <td></td>
            <td><img src="/Content/CategoryImages/scenery.png" alt="scenery" /></td>
            <td></td>
            <td><img src="/Content/CategoryImages/caboose.png" alt="caboose" /></td>
        </tr>
    </table>
</div>
<div class="row"></div>