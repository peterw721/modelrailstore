 @model _92031083_ModelRailStore.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h2>@ViewBag.Title</h2>
<div class="olive-background">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="form-horizontal">
        @Html.Partial("_EditUserPartial", Model)

        <div class="form-group">
            @Html.Label("Roles", new { @class = "control-label label" })
            <span class="col-md-10">
                @foreach (var item in Model.RolesList)
                {
                    <input type="checkbox" name="SelectedRole" value="@item.Value"
                           checked="@item.Selected" class="checkbox-inline" />
                    @Html.Label(item.Value, new { @class = "control-label white" })
                }
            </span>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
</div>
<div>
    <h2 class="with-highlight">@Html.ActionLink("Back to List", "Index")</h2>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
